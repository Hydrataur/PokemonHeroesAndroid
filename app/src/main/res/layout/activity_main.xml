<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/firstbg"
    android:id="@+id/layout"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/containerLayout">

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Temp name"
            android:textAlignment="center"
            android:textSize="60dp"/>
        <ImageView
            android:id="@+id/pokeImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/pokemonicon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/hpicon"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Health Points:"
                    />

                <TextView
                    android:id="@+id/HPText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/attackicon"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Attack:"
                    />

                <TextView
                    android:id="@+id/attackText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/defenseicon"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Defense:"
                    />

                <TextView
                    android:id="@+id/defenseText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/damageicon"/>
                <TextView
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Damage Range:"
                    />

                <TextView
                    android:id="@+id/damageText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/movementicon"/>
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Movement:"
                    />

                <TextView
                    android:id="@+id/movementText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rangedicon"/>
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Ranged:"
                    />

                <TextView
                    android:id="@+id/rangedText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/wingsicon"/>
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Flying:"
                    />

                <TextView
                    android:id="@+id/flyingText"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Temp"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>